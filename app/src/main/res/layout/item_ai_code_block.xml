<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/code_block_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false"
            android:paddingTop="32dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvCodeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:textColor="@color/code_block_text"
                android:textIsSelectable="true"
                android:textSize="13sp"
                android:typeface="monospace"
                android:scrollHorizontally="true"
                android:maxLines="999" />

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCodeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chat_copy_label_code"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCopyCodeBlock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/chat_copy_code_desc"
                android:padding="4dp"
                android:src="@drawable/ic_copy_24"
                android:tint="@color/beihang_blue" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
